<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:id="@+id/toplayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="80dp"
        android:gravity="center_horizontal"
        >
        <Button
            android:id="@+id/btn_city_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="City Id"
            android:layout_marginRight="10dp"
            />
        <Button
            android:id="@+id/btn_weather_by_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="by id"/>
        <Button
            android:id="@+id/btn_weather_by_cityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="By name"/>
    </LinearLayout>
    <EditText
        android:id="@+id/et_cityName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toplayout"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:text=""
        android:paddingLeft="10dp"
        android:hint="City Name"
        android:textSize="22sp"
        android:layout_marginBottom="10dp"
        />
    <ListView
        android:layout_below="@id/et_cityName"
        android:id="@+id/lv_weather_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

</RelativeLayout>